{
  "manifest_version": 3,
  "name": "Rvised - YouTube Video Summarizer",
  "version": "1.0.0",
  "description": "Transform any YouTube video into structured learning content with AI-powered summaries",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://rvised.vercel.app/*",
    "https://localhost:3000/*",
    "http://localhost:3000/*",
    "https://127.0.0.1:3000/*",
    "http://127.0.0.1:3000/*",
    "https://video.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*", "*://*.youtube.com/embed/*", "*://*.youtube.com/shorts/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  "sandbox": {
    "pages": []
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Rvised - Summarize Video"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/*", "shared/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}