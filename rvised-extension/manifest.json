{
  "manifest_version": 3,
  "name": "Rvised",
  "version": "1.0.0",
  "description": "YouTube Video Summarizer",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*",
    "https://rvised.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}


